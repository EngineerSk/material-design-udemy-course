<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/toolbar_id"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tab_layout_id"
        app:tabMode="fixed"
        app:tabGravity="fill"
        android:background="?attr/colorPrimary"
        app:tabIconTint="@color/color_tab_title"
        app:tabTextColor="@color/color_tab_title"
        app:tabSelectedTextColor="@color/design_default_color_secondary"
        app:tabIndicatorColor="@color/design_default_color_secondary"
        app:layout_constraintTop_toBottomOf="@id/toolbar_id"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/view_pager_id"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_id"/>

</androidx.constraintlayout.widget.ConstraintLayout>