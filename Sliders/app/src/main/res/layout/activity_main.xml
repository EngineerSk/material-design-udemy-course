<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatSeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appcompat_seek_bar_id"
        android:isScrollContainer="true"
        android:layout_margin="30dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appcompat_seek_bar_txt"
        android:text="@string/appcompat_seek_bar"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/appcompat_seek_bar_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/appcompat_seek_bar_value"
        android:text="@string/_0"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/appcompat_seek_bar_txt"
        app:layout_constraintBaseline_toBaselineOf="@id/appcompat_seek_bar_txt"/>

    <com.appyvet.materialrangebar.RangeBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/material_range_bar1_id"
        app:mrb_rangeBar="false"
        app:mrb_tickStart="1"
        app:mrb_tickInterval="1"
        app:mrb_tickEnd="20"
        app:mrb_pinRadius="16dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/appcompat_seek_bar_txt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/material_range_bar_txt"
        android:text="@string/material_range_bar"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/material_range_bar1_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/material_range_bar_value"
        android:text="@string/_0"
        android:layout_marginStart="5dp"
        app:layout_constraintStart_toEndOf="@id/material_range_bar_txt"
        app:layout_constraintBaseline_toBaselineOf="@id/material_range_bar_txt"/>

    <com.appyvet.materialrangebar.RangeBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/material_range_bar2_id"
        app:mrb_rangeBar="true"
        app:mrb_tickStart="10"
        app:mrb_tickEnd="20"
        app:mrb_tickInterval="1"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/material_range_bar_txt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/material_range_bar2_txt"
        android:text="@string/material_range_bar2"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/material_range_bar2_id"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/material_range_bar2_left_value"
        android:text="@string/_0"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/material_range_bar2_txt"
        app:layout_constraintBaseline_toBaselineOf="@id/material_range_bar2_txt"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/material_range_bar_right_value"
        android:text="@string/_0"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/material_range_bar2_left_value"
        app:layout_constraintBaseline_toBaselineOf="@id/material_range_bar2_left_value"/>

</androidx.constraintlayout.widget.ConstraintLayout>